# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure(2) do |config|
  config.vm.box = "trusty64"
  
  config.vm.define "opendims-vm" do |vm_define|
  end
  
  config.vm.hostname = "opendims.local"
  
  config.vm.network "forwarded_port", guest: 80, host: 8080
  config.vm.network "forwarded_port", guest: 8000, host: 8000
  config.vm.network "forwarded_port", guest: 5432, host: 8432
  
  config.vm.synced_folder ".", "/home/vagrant/opendims/"
  
  config.vm.provider "virtualbox" do |vb|
    vb.memory = "1024"
    vb.name = "opendims-vm"
  end
  
  config.vm.provision :shell, path: "provision_bootstrap.sh"
  config.vm.provision :shell, path: "provision_django.sh", privileged: false
end
